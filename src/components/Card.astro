---
interface Props {
	title: string;
	body: string;
	img: string;
}

const { title, body, img } = Astro.props;
---

<li class="link-card">
	<img src={img} class="img-card">
	
		<h2>
			{title}
		</h2>
		<p>
			{body}
		</p>
</li>
<style>
	.link-card {
		list-style: none;
		padding: 10px;
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		border: 1px solid rgba(var(--accent-light), 25%);
		border-radius: 8px;
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		color: rgb(var(--accent-light));
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: white;
	}
	.img-card {
		width: 100%;
		max-height: 400px;
	}
</style>
